#!/bin/bash

sed -i -e s/'^Date: $'/"Date: $(date +"%Y-%m-%d %H:%M")"/ \
       -e s/'^Status: draft$'/"Status: published"/        \
${1}

echo "Publishing ${1}"

git add ${1}
git commit -m"Published ${1}"
git push

make -C .. html
make -C .. github

